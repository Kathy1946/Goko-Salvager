{
    "name": "<%= config[:name] %>",
    "description": "<%= config[:title] %>",
    "version": "<%= config[:version] %>",
    "manifest_version": <%= config[:manifest_version] %>,
    "content_scripts": [{
        "css": [
            "<%= config[:css].join("\",\n            \"") %>"
        ],
        "js": [
            "<%= config[:js].join("\",\n            \"") %>"
        ],
        "matches": [
            "<%= config[:targeturls].join("\",\n            \"") %>"
        ]
    }],
    "permissions": [
        "<%= config[:domains].join("\",\n        \"") %>"
    ],
    "icons": {
        "16": "images/<%= config[:icon16] %>",
        "48": "images/<%= config[:icon48] %>",
        "128": "images/<%= config[:icon128] %>"
    }
}
