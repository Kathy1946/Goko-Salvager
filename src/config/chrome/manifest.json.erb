{
    "name": "Goko Dominion Salvager",
    "description": "Enhance your Online Dominion experience!",
    "version": "2.2",
    "manifest_version": 2,
    "content_scripts": [{
        "css": [
            "<%= config[:css].join("\",\n            \"") %>"
        ],
        "js": [ "loadAll.js" ],
        "matches": [ "*://*.goko.com/Dominion/gameClient.html" ]
    }],
    "permissions": [ "webNavigation" ],
    "web_accessible_resources": [
        "<%= config[:js].join("\",\n        \"") %>"
    ],
    "icons": {
        "16": "images/<%= config[:icon16] %>",
        "48": "images/<%= config[:icon48] %>",
        "128": "images/<%= config[:icon128] %>"
    }
}
