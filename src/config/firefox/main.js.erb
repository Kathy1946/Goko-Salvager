var pageMod = require("sdk/page-mod");
var self = require("sdk/self");

pageMod.PageMod({
    // Modify goko gameClient.html pages
    include: [
        <% for url in config[:targeturls] %>
            '<%= url %>',
        <% end %>
    ],

    // Apply modifications on DOMContentLoaded event
    contentScriptWhen: "ready",

    // Insert our changes to Goko's CSS
    contentStyleFile: [
        <% for css in config[:css] %>
            self.data.url('<%= @css %>'),
        <% end %>
    ],

    // Run our JS scripts (in the Add-On's context)
    contentScriptFile: [
        <% for js in config[:js] %>
            self.data.url('<%= js %>'),
        <% end %>
    ]
});
